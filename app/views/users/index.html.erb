<% provide(:title, 'All users') %>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-10">
  <h1 class="text-3xl font-bold text-gray-900 mb-8 text-center">All users</h1>

  <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    <% @users.each do |user| %>
      <li class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 flex items-center p-6 space-x-4 border border-gray-100">
        
        <div class="flex-shrink-0">
          <div class="h-12 w-12 rounded-full overflow-hidden ring-2 ring-gray-200">
             <%= gravatar_for user, size: 50 %>
          </div>
        </div>

        <div class="flex-1 min-w-0">
          <%= link_to user.name, user, class: "text-lg font-medium text-gray-900 hover:text-indigo-600 truncate block focus:outline-none" %>
          <p class="text-sm text-gray-500 truncate">
            View Profile
          </p>
        </div>
      </li>
    <% end %>
  </ul>
</div>